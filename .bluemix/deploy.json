{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "MicroServices Deploy Stage",
    "description": "",
    "longDescription": "The Delivery Pipeline for Devops Services allows you to automate your continuous deployment setup. To avoid conflicts, make sure to use unique application names. We recommend to use a common prefix like your name or initials.",
    "type": "object",
    "properties": {
        "selected-region": {
            "description": "The IBM Cloud region",
            "type": "string"
        },
        "selected-organization": {
            "description": "The IBM Cloud org",
            "type": "string"
        },
       "selected-space": {
            "description": "The IBM Cloud space",
            "type": "string"
        },
        "ui-app-name": {
            "description": "ui app name",
            "type": "string"
        },
        "dashboard-app-name": {
            "description": "dashboard app name",
            "type": "string"
        },
        "ui-branch-name": {
          "description": "ui branch name to deploy",
          "type": "string"
        },
        "dashboard-branch-name": {
          "description": "dashboard branch name to deploy",
          "type": "string"
        },
        "iam-api-key": {
          "type": "string"
        }
    },
    "required": [
      "selected-region", "selected-organization", "selected-space",
      "ui-app-name",
      "dashboard-app-name",
      "ui-branch-name",
      "dashboard-branch-name",
      "iam-api-key"
    ],
    "form": [
       {
          "type": "validator",
          "url": "/devops/setup/bm-helper/helper.html"
       },
        {
          "type": "text",
          "readonly": false,
          "title": "UI App Name",
          "key": "ui-app-name"
        },
        {
          "type": "text",
          "readonly": false,
          "title": "Dashboard App Name",
          "key": "dashboard-app-name"
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": ["33%", "33%", "33%"],
            "items": [
                {
                  "type": "label",
                  "title": "Region"
                },
                {
                  "type": "label",
                  "title": "Organization"
                },
                {
                  "type": "label",
                  "title": "Space"
                },
                {
                  "type": "select",
                  "key": "selected-region"
                },
                {
                  "type": "select",
                  "key": "selected-organization"
                },
                {
                  "type": "select",
                  "key": "selected-space",
                  "readonly": false
                },
                {
                  "type": "label",
                  "title": "To deploy IBM Cloud Functions and Cloud Foundry applications, the pipelines require an [IBM Cloud Platform API key](https://console.bluemix.net/docs/cli/reference/bluemix_cli/bx_cli.html#ibmcloud_iam_api_key_create). Use the `ibmcloud iam api-key-create <name>` command to create a new API key if you do not already have a key."
                },
                {
                  "type": "text",
                  "readonly": false,
                  "title": "IBM Cloud Platform API key",
                  "key": "iam-api-key"
                }
            ]
        },
        {
 		      "type": "table",
 		      "columnCount": 1,
 		      "widths": ["100%"],
 		      "items": [{
 			      "type": "label",
            "title": "Enter the names of the branches to deploy. The default and most stable branch is master. To deploy the ongoing developments, you can change the branch names to dev."
 		      }]
 	      },
        {
          "type": "text",
          "readonly": false,
          "title": "UI Branch Name",
          "key": "ui-branch-name"
        },
        {
          "type": "text",
          "readonly": false,
          "title": "Dashboard Branch Name",
          "key": "dashboard-branch-name"
        }
    ]
}
